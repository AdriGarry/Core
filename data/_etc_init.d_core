#!/bin/bash

case "$1" in

    start)
    
        sudo sh /home/pi/core/src/shell/sounds.sh startup

        sudo python /home/pi/core/src/python/buttons.py 2>&1 | sudo tee -a /home/pi/core/log/button.py.log &

        sudo sh /home/pi/core/core odi &

    ;;

    stop)

        sudo killall omxplayer.bin
        sudo killall node
        sudo sh /home/pi/core/src/shell/sounds.sh reboot
    ;;
esac

exit 0

